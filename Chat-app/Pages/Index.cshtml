@page
<!DOCTYPE html>
<html>
<head>
    <title>Chat-App</title>
</head>
<body style="font-family: Roboto,serif">
    <div id="homeScreen" class="row">
        <div class="col-8 d-flex flex-column gap-2" style="padding-right:10%;">
            <h1>SignalR Chat</h1>
            <input type="text" id="userName" placeholder="Username">
            <input type="text" id="roomName" placeholder="Room">
            <button id="joinRoom">Join Room</button>
        </div>

        <div class="col-4" style="padding-left: 10%;">
            <h2>Available Rooms</h2>
            <div id="roomList">

            </div>
        </div>
    </div>



    <div id="chatScreen" style="display:none">
        <h1 id="roomTitle"></h1>
        <div id="messages"></div>
        <div>
            <input type="text" id="messageInput" placeholder="Message" autocomplete="off">
        </div>
    </div>

</body>
</html>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
