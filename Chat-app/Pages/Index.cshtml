@page
<!DOCTYPE html>
<html>
<head>
    <title>Chat-App</title>
</head>
<body style="font-family: Roboto,serif">
    <div id="homeScreen" class="row">
        <div class="col-8 d-flex flex-column gap-2" style="padding-right:10%;">
            <h1>SignalR Chat</h1>
            <input type="text" id="userName" placeholder="Username">
            <input type="text" id="roomName" placeholder="Room">
            <button id="joinRoom">Join Room</button>
        </div>

        <div class="col-4" style="padding-left: 10%;">
            <h2>Available Rooms</h2>
            <div id="roomList">

            </div>
        </div>
    </div>



    <div id="chatScreen" class="container-fluid" style="display:none">
        <div class="row mb-3">
            <div class="col">
                <h1 id="roomTitle"></h1>
            </div>
        </div>

        <div class="row">
            <!-- Left: Chat messages -->
            <div class="col-8 d-flex flex-column gap-2">
                <div id="messages" class="border rounded p-2 mb-2" style="height: 400px; overflow-y: auto;">
                    <!-- messages go here -->
                </div>
                <input type="text" id="messageInput" class="form-control" placeholder="Message" autocomplete="off">
            </div>

            <!-- Right: Room details + leave button -->
            <div class="col-4">
                <h2>Users in Room</h2>
                <div id="userList" class="border rounded p-2 mb-3" style="height: 300px; overflow-y: auto;">
                    <!-- users go here -->
                </div>
                <button id="leaveRoom" class="btn btn-danger w-100">Leave Room</button>
            </div>
        </div>
    </div>


</body>
</html>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
